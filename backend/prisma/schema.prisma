generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Case {
  id                Int       @id @default(autoincrement())
  foyNo             String    @unique
  esasNo            String    @unique
  hukukNo           String?
  basvuran          String
  vekil             String?
  bagliHukuk        String?
  bagliHasar        String?
  policeBaslangic   DateTime?
  policeBitis       DateTime?
  kazaTarih         DateTime
  sigortaliPlaka    String?
  karsiPlaka        String?
  aracBasiTeminat   Float?
  kazaBasiTeminat   Float?
  taslakAdi         String?
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}